import java.util.Random;
import java.util.Scanner;
class juego02 {
    protected int numeroDeVidas;
    protected int record;

    public juego02(int numeroDeVidas2) {
        this.numeroDeVidas = numeroDeVidas;
        this.record = Integer.MAX_VALUE;
    }

    public void reiniciaPartida(int vidas) {
        this.numeroDeVidas = vidas;
    }

    public void actualizaRecord(int intentos) {
        if (intentos < record) {
            record = intentos;
        }
    }

    public boolean quitaVida() {
        numeroDeVidas--;
        return numeroDeVidas > 0;
    }
}

class JuegoAdivinaNumero2 extends Juego {
    protected int numeroAAdivinar;
    private final Random rand = new Random();

    public JuegoAdivinaNumero2(int numeroDeVidas) {
        super(numeroDeVidas);
    }

    public boolean validaNumero(int num) {
        return num >= 0 && num <= 10;
    }

    public void juega() {
        reiniciaPartida(numeroDeVidas);
        numeroAAdivinar = rand.nextInt(11);
        Scanner sc = new Scanner(System.in);
        int intentos = 0;

        while (true) {
            System.out.print("Adivina un numero entre 0 y 10: ");
            int num = sc.nextInt();
            intentos++;

            if (!validaNumero(num)) {
                System.out.println("NÃºmero invalido, debe estar entre 0 y 10.");
                continue;
            }

            if (num == numeroAAdivinar) {
                System.out.println("Acertaste!!!");
                actualizaRecord(intentos);
                break;
            } else {
                if (quitaVida()) {
                    if (num < numeroAAdivinar) {
                        System.out.println("El numero a adivinar es mayor.");
                    } else {
                        System.out.println("El numero a adivinar es menor.");
                    }
                } else {
                    System.out.println("Te quedaste sin vidas. Fin del juego.");
                    break;
                }
            }
        }
    }
}

class JuegoAdivinaPar extends JuegoAdivinaNumero2 {
    public JuegoAdivinaPar(int numeroDeVidas) {
        super(numeroDeVidas);
    }

    @Override
    public boolean validaNumero(int num) {
        if (num < 0 || num > 10) {
            return false;
        }
        if (num % 2 == 0) {
            return true;
        } else {
            System.out.println("Error: Debes ingresar un numero PAR entre 0 y 10.");
            return false;
        }
    }
}

class JuegoAdivinaImpar extends JuegoAdivinaNumero2 {
    public JuegoAdivinaImpar(int numeroDeVidas) {
        super(numeroDeVidas);
    }

    @Override
    public boolean validaNumero(int num) {
        if (num < 0 || num > 10) {
            return false;
        }
        if (num % 2 != 0) {
            return true;
        } else {
            System.out.println("Error: Debes ingresar un numero IMPAR entre 0 y 10.");
            return false;
        }
    }
}


